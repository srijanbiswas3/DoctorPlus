<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/botsheet"
    android:orientation="vertical"
    tools:context=".Recommend2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toolbar_background"
        android:elevation="3dp"
        android:stateListAnimator="@null"
        android:translationZ="3dp"
        app:title="Problem Name"
        app:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/status_color_blue"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Please select the problems you might have"
        android:textColor="@android:color/white"
        android:textSize="17dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/check"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="20dp" />
    </ScrollView>

    <TextView
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/muli"
        android:text="list of problems"
        android:textColor="#CD2946FF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_above="@+id/rel"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_background2"
        android:elevation="4dp"
        android:text="View Suggestions"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/botstyle" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/btn_background3"
            android:fontFamily="@font/muli"
            android:gravity="center"
            android:minWidth="200dp"
            android:minHeight="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="P name"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </RelativeLayout>


</RelativeLayout>