<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/draw"
    android:background="@color/botsheet"
    tools:context="com.tesseract.DoctorSaheb.HomeActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="3dp"
            android:translationZ="3dp"
            android:stateListAnimator="@null"
            android:background="@drawable/toolbar_background"
            android:title="Doctor Plus"
            android:titleTextColor="@android:color/white"/>


        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:paddingRight="20dp"
            android:layout_centerHorizontal="true"
            android:layout_height="80dp"
            android:text="Welcome!"
            android:fontFamily="@font/muli"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:background="@drawable/status_color_blue"

            android:textColor="@android:color/white"

            android:textSize="17sp" />
        <TextView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:text="connecting . . ."
            android:layout_centerHorizontal="true"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/status_color_blue"
            android:layout_below="@+id/welcome"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"

            android:textSize="12sp" />

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataloadingtxt"
            android:text="Please Be Patient while \n the Data is Loading!"
            android:layout_below="@+id/progress"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filter"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/logout"
            android:layout_marginLeft="-55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli_bold"
           android:textSize="13sp"
            android:elevation="4dp"
            android:translationZ="2dp"
            android:stateListAnimator="@null"
            android:text="Log out"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/logout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:fontFamily="@font/muli"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:elevation="4dp"
            android:translationZ="2dp"
            android:stateListAnimator="@null"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/logout"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <include layout="@layout/bottom_sheet" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="230dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemTextColor="@android:color/white"
        app:itemIconTint="@android:color/white"
        android:id="@+id/nav"
        android:background="@color/background"
        android:layout_gravity="start"
        >
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>