<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context="com.tesseract.DoctorSaheb.ProfileActivity">

    <include layout="@layout/background"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:stateListAnimator="@null"
        android:background="@drawable/toolbar_background"
        app:title="     Sign Up"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="90dp"
        android:paddingTop="10dp"
        android:paddingBottom="40dp">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ed1"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:hint="Email address"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/edittext_background"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/muli"
                    android:padding="8dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Password (minimum 8 characters)"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ed3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password"
                    android:layout_margin="20dp"
                    android:hint="Mobile Number"
                    android:gravity="center"
                    android:fontFamily="@font/muli"
                    android:padding="8dp"
                    android:background="@drawable/edittext_background"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ed4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phnumber"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/edittext_background"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/muli"
                    android:hint="Full Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@+id/ed4"
                android:textColor="@android:color/white"
                android:fontFamily="@font/muli"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/gendertxt"
                android:textSize="15dp"
                android:layout_marginTop="-10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/ed4">
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/male"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/muli_bold"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:background="@color/background"
                    />
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textAllCaps="false"
                    android:id="@+id/female"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/muli_bold"
                    android:background="@color/background2"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:shadowColor="@android:color/white"
        android:stateListAnimator="@null"
        android:fontFamily="@font/muli"
        android:textAllCaps="false"
        android:background="@drawable/btn_background"
        android:text="Create Account"
        android:textSize="20sp"
        android:textColor="@android:color/white"></Button>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/muli"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:shadowColor="@android:color/white"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="@drawable/btn_background2"
        android:text="Cancel"
        android:textColor="@android:color/white"></Button>


</RelativeLayout>